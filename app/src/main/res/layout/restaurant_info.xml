<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xlmns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:layout_editor_absoluteX="85dp"
    tools:layout_editor_absoluteY="28dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F3EEEE"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1138dp"
            android:background="#E7E7EA"
            tools:context=".RestaurantInfo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="413dp"
                android:layout_height="468dp"
                android:background="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/review_amount"
                    android:layout_width="138dp"
                    android:layout_height="26dp"

                    android:layout_marginStart="8dp"

                    android:layout_marginTop="10dp"
                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/rating"
                    app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"

                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:drawableEndCompat="@drawable/ic_baseline_star_24"
                    app:drawableTint="#ECAB2A"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"

                    android:drawablePadding="8dp"
                    android:text="@string/_438_560_3245"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_local_phone_24"
                    app:drawableTint="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adress" />

                <TextView
                    android:id="@+id/adress"
                    android:layout_width="293dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="12dp"

                    android:layout_marginTop="8dp"

                    android:text="@string/text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resto_pic" />

                <ImageButton
                    android:id="@+id/likebutton"
                    android:layout_width="89dp"
                    android:layout_height="71dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:tint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/adress" />

                <ImageView
                    android:id="@+id/resto_pic"
                    android:layout_width="442dp"
                    android:layout_height="220dp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitXY"
                    android:src="@drawable/festin2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resto_title" />

                <TextView
                    android:id="@+id/resto_title"
                    android:layout_width="413dp"
                    android:layout_height="108dp"

                    android:background="#777676"
                    android:backgroundTintMode="screen"

                    android:fontFamily="@font/roboto_medium"
                    android:outlineAmbientShadowColor="#FFF8F8"
                    android:paddingStart="10dp"
                    android:paddingTop="65dp"
                    android:text="@string/text"
                    android:textAlignment="gravity"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="420dp"
                    android:layout_height="2.5dp"
                    android:background="@color/black"
                    android:textColor="@color/red_main"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/review_amount"
