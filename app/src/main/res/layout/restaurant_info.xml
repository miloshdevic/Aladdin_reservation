                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:text="@string/vin"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu9"
                xlmns:drawableStartCompat="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/menu8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:text="@string/pain_l_ail"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu3"
                xlmns:drawableStartCompat="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/menu9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:text="@string/coke"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boisson"
                xlmns:drawableStartCompat="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/boisson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:text="@string/boisson"

                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu8" />

            <TextView
                android:id="@+id/menu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:text="@string/sauter_au_boeuf"
                android:textColor="@color/black"
                android:textSize="16sp"
