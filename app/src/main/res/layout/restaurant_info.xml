                android:layout_marginTop="10dp"
                android:text="@string/gateau"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dessert"
                xlmns:drawableStartCompat="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:text="@string/salade_de_fruit"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView39"
                xlmns:drawableStartCompat="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:text="@string/pudding"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView40"
                xlmns:drawableStartCompat="@drawable/ic_baseline_lens_24" />

            <Button
                android:id="@+id/reserve_button"
                android:layout_width="294dp"
                android:layout_height="55dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/fav_countor"
                android:text="@string/r_server"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:drawableTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView41" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
