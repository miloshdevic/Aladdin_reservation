<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Localisation">

        <SwitchPreferenceCompat app:title="Utiliser ma localisation sur Map" />
        <SwitchPreferenceCompat
            app:title="Partager à tout moment" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">

        <SwitchPreferenceCompat
            app:title="Promotions" />

        <SwitchPreferenceCompat
            app:title="Rappels des réservations" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Autres">
        <SwitchPreferenceCompat app:title="Dark theme" />
        <EditTextPreference
            android:defaultValue="true"
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Courriel" />
        <EditTextPreference
            android:defaultValue="false"
            android:key="edit_text_preference_2"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Mot de passe" />


    </PreferenceCategory>

